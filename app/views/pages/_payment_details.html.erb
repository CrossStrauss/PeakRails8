<div class="w-[90%] lg:w-[65%] mx-auto pt-10 lg:py-30">
    <div class="pb-10 flex items-center flex-col">
        <h2 class="uppercase text-[30px] text-center lg:text-[55px] font-semibold mb-4 w-full lg:leading-18">
            Review My order
        </h2>
        <div class="red-accent-pill-large"></div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-5 lg:grid-cols-5 gap-7">
        <div class="col-span-3 lg:col-span-3 overflow-auto rounded-xl lg:border-0">

            <div class="w-full border border-dark-custom rounded-xl p-8 mb-8">
                <p class="text-xl lg:text-2xl font-medium">
                    Edit Address
                </p>
                <div class="grid grid-cols-2">
                    <hr class="col-span-2 mt-3 mb-5">
                    <div>
                        <span class="bg-grey-custom uppercase px-3 py-1 rounded-full text-xs">
                            residential
                        </span>
                        <p class="font-medium mt-2 w-[75%]">
                            204 Fordyce Road, Walmer,
                            Gqeberha, 6065
                        </p>
                        <div class="flex justify-between flex-row pt-3 w-[75%]">
                            <p class="text-xs text-subtext-grey">
                                Christopher Strauss
                            </p>
                            <p class="text-xs text-subtext-grey">
                                0824460590
                            </p>
                        </div>
                    </div>

                    <div class="flex">
                        <a class="text-base text-peak-red w-full text-end">
                            Change
                        </a>
                    </div>

                    <hr class="col-span-2 mt-3 mb-5">

                    <div class="col-span-2">
                        <p class="text-xs">
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. 
                            Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. 
                            <br>
                            <br>
                            Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. 
                        </p>
                    </div>
                </div>
            </div>

            <div class="w-full border border-dark-custom rounded-xl p-8">
                <p class="text-xl lg:text-2xl font-medium">
                    Select A Payment Method
                </p>
                <div class="grid grid-cols-2">
                    <hr class="col-span-2 mt-3">
                    <div>
                        <p class="font-medium mt-5 w-[75%]">
                            Credit Card Payment
                        </p>
                        <div class="flex justify-between flex-row pt-3 w-[75%]">
                           <%= image_tag 'visa.svg', class: 'w-[20%]' %>
                           <%= image_tag 'instant-eft-logo.svg', class: 'w-[20%]' %>
                           <%= image_tag 'mastercard-3.svg', class: 'w-[20%]' %>
                           <%= image_tag 'mastercard-3.svg', class: 'w-[20%]' %>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-span-3 lg:col-span-2">
            <div class="grid grid-cols-2 bg-grey-custom rounded-xl p-8 mb-8">
                <p class="text-xl lg:text-2xl font-medium col-span-1">
                    Order Summary
                </p>
                <hr class="col-span-2 mt-3 mb-5">
                <div>
                    <p class="shipping-text-styling">
                        Subtotal
                    </p>
                </div>
                <div>
                    <p class="shipping-text-styling text-end">
                        R9999999.99
                    </p>
                </div>

                <div>
                </div>
                <div>
                    <p class="uppeercase shipping-text-styling text-end">
                        Free Shipping
                    </p>
                </div>

                <hr class="col-span-2 mt-3 mb-5">

                <div>
                    <p class="shipping-text-styling">
                       Total 
                       <span class="text-dark-grey">
                        (items 1)
                       </span>
                    </p>
                </div>
                <div>
                    <p class="uppeercase text-xl text-end">
                        R9999999.99
                    </p>
                </div>

                <hr class="col-span-2 mt-3 mb-5">

                <div class="lg:pe-2 col-span-2 lg:col-span-1">
                    <button type="button" class="btn-dark-checkout-outline rounded-xl md:me-3 h-12 flex items-center w-full mt-5 lg:mt-0 order-4 lg:order-3 flex justify-evenly">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                            <path fill-rule="evenodd" d="M11.03 3.97a.75.75 0 0 1 0 1.06l-6.22 6.22H21a.75.75 0 0 1 0 1.5H4.81l6.22 6.22a.75.75 0 1 1-1.06 1.06l-7.5-7.5a.75.75 0 0 1 0-1.06l7.5-7.5a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
                        </svg>
                        Continue Shopping
                    </button>
                </div>
                
                <div class="plg:s-2 col-span-2 lg:col-span-1">
                    <button type="button" class="btn-peak-checkout-red-solid rounded-xl md:me-3 h-12 flex items-center w-full mt-5 lg:mt-0 order-4 lg:order-3 flex justify-evenly">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6">
                            <path d="M2.25 2.25a.75.75 0 0 0 0 1.5h1.386c.17 0 .318.114.362.278l2.558 9.592a3.752 3.752 0 0 0-2.806 3.63c0 .414.336.75.75.75h15.75a.75.75 0 0 0 0-1.5H5.378A2.25 2.25 0 0 1 7.5 15h11.218a.75.75 0 0 0 .674-.421 60.358 60.358 0 0 0 2.96-7.228.75.75 0 0 0-.525-.965A60.864 60.864 0 0 0 5.68 4.509l-.232-.867A1.875 1.875 0 0 0 3.636 2.25H2.25ZM3.75 20.25a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0ZM16.5 20.25a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0Z" />
                        </svg>
                        Proceed to Checkout
                    </button>
                </div>
            </div>

            <div class="w-full border border-dark-custom rounded-xl p-5">
                <div class="grid grid-cols-2">
                    <div>
                        <p class="font-medium w-[75%]">
                            Items for delivery
                        </p>
                    </div>
                    <div class="flex">
                        <a class="text-base text-peak-red w-full text-end">
                            Show Details
                        </a>
                    </div>
                    <div class="bg-grey-custom flex justify-center items-center rounded-md overflow-hidden w-[100px] aspect-square p-2 mt-3">   
                        <%= image_tag 'peak.png', class:"w-[80px]" %>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>